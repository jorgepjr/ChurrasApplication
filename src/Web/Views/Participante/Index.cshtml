@model ParticipanteViewModel
@{
ViewData["Title"] = "Buscar Participante";
}
<div class="card-title"> 
<h4 class="text-center">@ViewData["Title"] </h4>
</div>
<div class="card-body">
<div class="modal-dialog">
    <div class="modal-content card-body">
        <form asp-action="Buscar">
            <div class="form-group">
               <label asp-for="Nome" class="font-weight-bold"></label>
            <input asp-for="Nome" class="form-control" placeholder="Informe seu nome para encontrar um churras"/>
            </div>
            <div class="form-group float-lg-right">
            <button class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div>
</div>
</div>