@model ChurrasViewModel
@{
ViewData["Title"] = "Agendar Churras";
}

<div class="card-title"> 
<h4 class="text-center">@ViewData["Title"] </h4>
</div>
<div class="modal-dialog">
    <div class="modal-content card-body">
        <form asp-action="Salvar">
            <div class="form-group">
                <label asp-for="Descricao" class="font-weight-bold"></label>
                <input type="text" asp-for="Descricao" class="form-control">
                <span class="text-danger" asp-validation-for="Descricao"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data" class="font-weight-bold"></label>
                <input type="date" asp-for="Data" class="form-control">
                <span class="text-danger" asp-validation-for="Data"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacao" class="font-weight-bold"></label>
                <textarea type="text" asp-for="Observacao" class="form-control"></textarea>
            </div>
            <div class="from-group float-lg-right">
                <a class="btn btn-link" asp-action="Index"><em class="fas fa-arrow-left"></em> Voltar</a>
                <button class="btn btn-primary" type="submit">Salvar</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}